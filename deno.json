{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read app/src/main.ts",
    "start": "deno run --allow-net --allow-env --allow-read src/main.ts",
    "check": "deno check --quiet",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test app/tests",
    "init-test-db": "sh ./tools/init-test-db.sh",
    "docker:postgres:compose:up": "docker compose up -d db",
    "docker:postgres:compose:down": "docker compose down",
    "docker:postgres:db-init": "docker compose run --rm db-init",
    "docker:postgres:reinit": "docker compose down -v && docker compose up -d db && deno task docker:postgres:db-init",
    "init-db:all": "deno task docker:postgres:compose:up && deno task docker:postgres:db-init",
    "test:unit": "deno test --allow-read --allow-env --allow-net=127.0.0.1,localhost app/tests/unit",
    "test:frontend": "deno test --allow-read --allow-env --allow-net=127.0.0.1,localhost app/tests/frontend",
    "test:all": "deno test -A app/tests",

    "build:artifacts": "deno run --unstable --allow-read --allow-write --allow-net scripts/build_artifacts.ts",
    "build": "deno task build:artifacts"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.11.7",
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@std/testing": "jsr:@std/testing@^1.0.17",
    "b-fuze/deno-dom": "jsr:@b-fuze/deno-dom@0.1.56",

    "postgres": "https://deno.land/x/postgresjs@v3.4.5/mod.js"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"]
  }
}
