{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Deno Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "--config=app/deno.json",
        "--allow-net",
        "--allow-env",
        "--allow-read",
        "app/src/main.ts"
      ],
      "console": "integratedTerminal",
      "env": {
        "PORT": "8000",
        "DATABASE_URL": "postgres://postgres:test@localhost:5432/test_db",
        "JWT_SECRET": "test-secret"
      }
    },
    {
      "name": "Attach to Deno Server",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "restart": false,
      "timeout": 30000
    },
    {
      "name": "Debug Deno Tests + MCP",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Attach to Deno Tests (Manual Start)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "timeout": 30000,
      "skipFiles": ["/**"]
    },
    {
      "name": "Debug Tests with MCP (Auto Start)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "timeout": 30000,
      "skipFiles": ["/**"],
      "preLaunchTask": "Start Complete Debug Environment"
    }
  ]
}
